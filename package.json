{
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "description": "View and run tasks from Explorer",
    "icon": "res/gears-r-blue.png",
    "version": "1.7.6",
    "publisher": "spmeesseman",
    "repository": {
        "type": "git",
        "url": "https://github.com/spmeesseman/vscode-taskexplorer.git"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "multi-root ready",
        "task",
        "tasks",
        "task explorer",
        "task launcher",
        "task runner",
        "task view",
        "launcher",
        "launch",
        "ant",
        "grunt",
        "gulp",
        "tsc",
        "npm"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "*"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "package": "vsce package",
        "publish": "vsce publish",
        "vscode:prepublish": "npm run build",
        "build": "npx tsc -p ./",
        "compile": "npx tsc -p ./",
        "semantic-release": "semantic-release",
        "semantic-release-no-ci": "semantic-release --no-ci",
        "semantic-release-dry": "semantic-release --dry-run",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "commit": "npx git-cz"
    },
    "dependencies": {
        "is-utf8": "^0.2.1",
        "jsonc-parser": "^2.0.2",
        "minimatch": "^3.0.4",
        "request-light": "^0.2.4",
        "semver": "^6.0.0",
        "tmp": "0.1.0",
        "vscode-nls": "^4.0.0",
        "xml2js": "^0.4.19"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^3.0.2",
        "@semantic-release/git": "^7.0.8",
        "@types/glob": "^7.1.1",
        "@types/istanbul": "^0.4.30",
        "@types/minimatch": "^3.0.3",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.11.3",
        "@types/semver": "^5.5.0",
        "@types/tmp": "0.0.34",
        "@types/xml2js": "^0.4.3",
        "codecov": "^3.2.0",
        "commitizen": "^3.0.7",
        "cz-conventional-changelog": "^2.1.0",
        "decache": "^4.5.1",
        "eslint-plugin-prettier": "^3.0.1",
        "glob": "^7.1.2",
        "iconv-lite": "^0.4.23",
        "istanbul": "^0.4.5",
        "jschardet": "^2.1.0",
        "mocha": "^6.0.2",
        "mocha-junit-reporter": "^1.20.0",
        "mocha-multi-reporters": "^1.1.7",
        "prettier": "^1.16.4",
        "prettylint": "^1.0.0",
        "remap-istanbul": "^0.13.0",
        "semantic-release": "^15.13.3",
        "semantic-release-vsce": "^2.2.6",
        "tslint": "^5.8.0",
        "typescript": "^3.0.3",
        "vsce": "^1.48.0",
        "vscode": "^1.1.30",
        "vscode-nls-dev": "3.2.6"
    },
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "taskActivity",
                    "title": "%view.name%",
                    "icon": "res/gears-r.svg"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "taskExplorer",
                    "name": "%view.name%",
                    "when": "config.taskExplorer.enableExplorerView"
                }
            ],
            "taskActivity": [
                {
                    "id": "taskExplorerSideBar",
                    "name": "",
                    "when": "config.taskExplorer.enableSideBar"
                }
            ]
        },
        "commands": [
            {
                "command": "taskExplorerSideBar.run",
                "title": "%command.run%",
                "when": "config.taskExplorer.enableSideBar",
                "icon": {
                    "light": "res/light/continue.svg",
                    "dark": "res/dark/continue.svg"
                }
            },
            {
                "command": "taskExplorerSideBar.stop",
                "title": "%command.stop%",
                "when": "config.taskExplorer.enableSideBar",
                "icon": {
                    "dark": "res/dark/stop.svg",
                    "light": "res/light/stop.svg"
                }
            },
            {
                "command": "taskExplorerSideBar.open",
                "title": "%command.open%",
                "when": "config.taskExplorer.enableSideBar"
            },
            {
                "command": "taskExplorerSideBar.runInstall",
                "title": "%command.runInstall%",
                "when": "config.taskExplorer.enableSideBar"
            },
            {
                "command": "taskExplorerSideBar.refresh",
                "title": "%command.refresh%",
                "when": "config.taskExplorer.enableSideBar",
                "icon": {
                    "light": "res/light/refresh.svg",
                    "dark": "res/dark/refresh.svg"
                }
            },
            {
                "command": "taskExplorer.run",
                "title": "%command.run%",
                "when": "config.taskExplorer.enableExplorerView",
                "icon": {
                    "light": "res/light/continue.svg",
                    "dark": "res/dark/continue.svg"
                }
            },
            {
                "command": "taskExplorer.stop",
                "title": "%command.stop%",
                "when": "config.taskExplorer.enableExplorerView",
                "icon": {
                    "dark": "res/dark/stop.svg",
                    "light": "res/light/stop.svg"
                }
            },
            {
                "command": "taskExplorer.open",
                "title": "%command.open%",
                "when": "config.taskExplorer.enableExplorerView"
            },
            {
                "command": "taskExplorer.runInstall",
                "title": "%command.runInstall%",
                "when": "config.taskExplorer.enableExplorerView"
            },
            {
                "command": "taskExplorer.refresh",
                "title": "%command.refresh%",
                "when": "config.taskExplorer.enableExplorerView",
                "icon": {
                    "light": "res/light/refresh.svg",
                    "dark": "res/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "taskExplorer.refresh",
                    "when": "view == taskExplorer",
                    "group": "navigation"
                },
                {
                    "command": "taskExplorerSideBar.refresh",
                    "when": "view == taskExplorerSideBar",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "taskExplorer.open",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == taskFile",
                    "group": "navigation@1"
                },
                {
                    "command": "taskExplorer.runInstall",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == taskFile",
                    "group": "navigation@2"
                },
                {
                    "command": "taskExplorer.open",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == script",
                    "group": "navigation@1"
                },
                {
                    "command": "taskExplorer.run",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == script",
                    "group": "navigation@2"
                },
                {
                    "command": "taskExplorer.run",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == script",
                    "group": "inline"
                },
                {
                    "command": "taskExplorer.stop",
                    "when": "config.taskExplorer.enableExplorerView && view == taskExplorer && viewItem == runningScript",
                    "group": "inline"
                },
                {
                    "command": "taskExplorerSideBar.open",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == taskFile",
                    "group": "navigation@1"
                },
                {
                    "command": "taskExplorerSideBar.runInstall",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == taskFile",
                    "group": "navigation@2"
                },
                {
                    "command": "taskExplorerSideBar.open",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == script",
                    "group": "navigation@1"
                },
                {
                    "command": "taskExplorerSideBar.run",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == script",
                    "group": "navigation@2"
                },
                {
                    "command": "taskExplorerSideBar.run",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == script",
                    "group": "inline"
                },
                {
                    "command": "taskExplorerSideBar.stop",
                    "when": "config.taskExplorer.enableSideBar && view == taskExplorerSideBar && viewItem == runningScript",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "id": "taskExplorer",
            "type": "object",
            "title": "Task Explorer",
            "properties": {
                "taskExplorer.enableExplorerView": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%config.taskExplorer.enableExplorerView%"
                },
                "taskExplorer.enableSideBar": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "%config.taskExplorer.enableSideBar%"
                },
                "taskExplorer.enableNpmScripts": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%config.taskExplorer.enableNpmScripts%"
                },
                "taskExplorer.enableGruntTasks": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "%config.taskExplorer.enableGruntTasks%"
                },
                "taskExplorer.enableGulpTasks": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "%config.taskExplorer.enableGruntTasks%"
                },
                "taskExplorer.enableAntTargets": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%config.taskExplorer.enableAntTargets%"
                },
                "taskExplorer.pathToAnt": {
                    "type": "string",
                    "markdownDescription": "%config.taskExplorer.pathToAnt%"
                },
                "taskExplorer.enableAnsiconForAnt": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%config.taskExplorer.enableAnsiconForAnt%"
                },
                "taskExplorer.pathToAnsicon": {
                    "type": "string",
                    "markdownDescription": "%config.taskExplorer.pathToAnsicon%"
                },
                "taskExplorer.enableCodeTasks": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%config.taskExplorer.enableCodeTasks%"
                },
                "taskExplorer.debug": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "%config.taskExplorer.debug%"
                },
                "taskExplorer.debugLevel": {
                    "type": "number",
                    "enum": [
                        1,
                        2,
                        3,
                        4,
                        5
                    ],
                    "default": 1,
                    "description": "%config.taskExplorer.debugLevel%"
                },
                "taskExplorer.runSilent": {
                    "type": "boolean",
                    "default": false,
                    "scope": "resource",
                    "markdownDescription": "%config.taskExplorer.runSilent%"
                },
                "taskExplorer.exclude": {
                    "type": [
                        "string",
                        "array"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/ext/**",
                        "**/packages/**",
                        "**/test/**",
                        "**/.vscode-test/**",
                        "**/build/**"
                    ],
                    "description": "%config.taskExplorer.exclude%",
                    "scope": "resource"
                },
                "taskExplorer.fetchOnlinePackageInfo": {
                    "type": "boolean",
                    "description": "%config.taskExplorer.fetchOnlinePackageInfo%",
                    "default": true,
                    "scope": "window",
                    "tags": [
                        "usesOnlineServices"
                    ]
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "package.json",
                "url": "https://schemastore.azurewebsites.net/schemas/json/package.json"
            },
            {
                "fileMatch": "bower.json",
                "url": "https://schemastore.azurewebsites.net/schemas/json/bower.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "ant",
                "required": [
                    "script"
                ],
                "properties": {
                    "script": {
                        "type": "string",
                        "description": "%taskdef.script%"
                    },
                    "path": {
                        "type": "string",
                        "description": "%taskdef.path%"
                    }
                }
            }
        ]
    },
    "release": {
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "angular",
                    "releaseRules": [
                        {
                            "type": "docs",
                            "scope": "readme",
                            "release": "patch"
                        },
                        {
                            "type": "docs",
                            "scope": "vsce",
                            "release": "patch"
                        },
                        {
                            "type": "refactor",
                            "release": "patch"
                        }
                    ],
                    "parserOpts": {
                        "noteKeywords": [
                            "BREAKING CHANGE",
                            "BREAKING CHANGES"
                        ]
                    }
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/github",
            "@semantic-release/git"
        ],
        "verifyConditions": [
            "@semantic-release/github",
            "@semantic-release/git",
            "@semantic-release/changelog",
            "semantic-release-vsce"
        ],
        "prepare": [
            "@semantic-release/npm",
            "@semantic-release/changelog",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "CHANGELOG.md",
                    "package.json",
                    "package-lock.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            },
            "semantic-release-vsce"
        ],
        "publish": [
            "semantic-release-vsce",
            {
                "path": "@semantic-release/github",
                "assets": "vscode-taskexplorer.vsix"
            }
        ],
        "packageVsix": "vscode-taskexplorer.vsix"
    }
}
